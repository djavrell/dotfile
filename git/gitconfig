[color]
  ui = true

[color "branch"]
  current = yellow bold
  local   = green bold
  remote  = cyan bold

[core]
  editor        = vim
  whitespace    = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile  = /Users/kpr/.gitignore
  pager         = diff-so-fancy | less --tabs=2 -RFX

[alias]
  lola  = log --decorate --graph --abbrev-commit --all --simplify-by-decoration --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  llola = log --decorate --graph --abbrev-commit --all --simplify-by-decoration --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  flola = log --decorate --graph --abbrev-commit --all --simplify-by-decoration

  lol  = log --decorate --graph --abbrev-commit --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  llol = log --decorate --graph --abbrev-commit --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  hist = log --decorate --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

  ldiff = diff HEAD~

  ls    = ls-tree -r HEAD --name-only
  mr    = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
  type  = cat-file -t
  dump  = cat-file -p
  prune = fetch --prune

  undo = reset --soft HEAD^

[rebase]
 autostash = true

[merge]
  tool = vimdiff

[pager]
  difftool = true

[diff]
  tool = icdiff

[difftool]
  prompt = false

[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE

[icdiff]
  options = --highlight --line-numbers

[color "diff-hightlight"]
  oldNormal     = red bold
  oldHightlight = red bold 52
  newNormal     = gree bold
  newHightlight = green bold 22

[color "diff"]
  meta      = yellow
  frag      = magenta bold
  commit    = yellow bold
  old       = red bold
  new       = green bold
  whitspace = red reverse

[diff-so-fancy]
  changeHunkIndicator = true
  stripLeadingSymbols = false
