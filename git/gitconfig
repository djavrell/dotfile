[color]
    ui = true

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /Users/kpr/.gitignore

[alias]
    lol = log --all --decorate --graph --abbrev-commit --pretty=oneline
    llol = log --decorate --graph --abbrev-commit --pretty=oneline
    flol = log --all --decorate --graph --abbrev-commit
    hist = log --decorate --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    ls = ls-tree -r HEAD --name-only
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
    type = cat-file -t
    dump = cat-file -p

[merge]
	tool = vimdiff
