{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "haskell": {
      "command": "ghcide",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "languageServerHaskell": {
            "hlintOn": true
          }
        }
      }
    }
  },
  "diagnostic.virtualText": true,
  "diagnostic.level": "error",
  "signature.floatMaxWidth": 500,
  "signature.maxWindowHeight": 30,
  "codeLens.enable": true,
  "list": {
    "source": {
      "mru": {
        "ignoreGitIgnore": true
      },
      "files": {
        "args": [ "--hidden", "--files" ]
      }
    }
  },
  "explorer": {
    "icon": {
      "enableNerdfont": true
    }
  },
  "coc": {
    "preferences": {
      "formatOnType": true
    }
  },
  "capabilities": {
    "experimental": {
      "treeViewProvider": true
    }
  },
  "metals": {
    "statusBarEnabled": true
  },
  //"tsserver": {
  //  "log": "verbose",
  //  "trace.server": "verbose"
  //},
  "imselect.enableStatusItem": true,
  "imselect.enableFloating": true,
  "imselect.defaultInput": "com.apple.keylayout.FR_fr"
}
