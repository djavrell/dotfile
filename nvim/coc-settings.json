{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "efm": {
     "command": "efm-langserver",
     "args": [],
     "filetypes": ["vim", "markdown", "yaml"]
    }
  }
}
